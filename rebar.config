{erl_opts, [
	warnings_as_errors,
	bin_opt_info
]}.

{clean_files, [
	"erl_crash.dump",
	"*.eunit", "ebin/*", ".eunit/",
	"doc/*.html", "doc/*.edoc-info", "doc/*.css", "doc/*.png", "doc/edoc-info",
	"test/ct/logs/*", "test/ct/*.beam", "test/ct/helpers/*.beam"
]}.

{deps, [
	{dh_date, "1.0.0"},
	{meck, "0.9.2"}
]}.

{cover_enabled, true}.

{eunit_opts, [
%	verbose,
	{report, {
		eunit_surefire,
		[{dir, "./logs/eunit"}]
	}}
]}.

{eunit_compile_opts, [
	export_all
]}.


{ct_dir, "test/ct"}.
{ct_log_dir, "logs/ct"}.
{ct_extra_params, "-args_file test/ct/config/node.args -pa test/ct"}.
{ct_use_short_names, true}.
